					  <%= link_to('Edit Account', edit_user_registration_path) %>
					<% else %>
					  <%= link_to('Register', new_user_registration_path)  %>
					<% end %>
				</div>
			</div>
		
			<div class="span2">
				<div class="login_button">
					<% if user_signed_in? %>
