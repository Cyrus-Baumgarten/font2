			</div>
	
			<div class="span2">
				<div class="login_button">
					<% if tester_signed_in? %>
					  <%= link_to('Tester Logout', destroy_tester_session_path) %>        
					<% else %>
					  <%= link_to('Tester Login', new_tester_session_path)  %>  
					<% end %>
				</div>
			</div>
			
			<% if user_signed_in? %>
				<div class="span4">
					<div class="login_button">
						Sketches: <%= link_to("Create", new_sketch_path ) %> | <%= link_to("Index", sketches_path ) %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
