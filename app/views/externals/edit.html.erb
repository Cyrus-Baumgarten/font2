<div class="orange_stripe">
	<div class="container">
		<div class="row">
			<div class="span3">
				<div class="grey_sidebar">
					Test issued by: <%= @user.name %> | Results for: <%= @tester.name %> | Test issued to: <%= @subject.name %>
					<br>

					<br>
					<strong>Instructions:</strong> use the sliders to change the corresponding attributes below to match the values you feel represent <strong><%= @subject.name %></strong>
					<br>

					<br>
				</div>
			</div>
			<div class="span9">
				<%= form_for @external do |f| %>
				<div class="white_section_box">
					<table class="edit_table">
						<tr>
							<td>
								<%= @attributes[1] %>
								<br>
								<%= f.range_field(:attribute1size, min: 1, max: 10, step: 1) %>
							</td>
							<td>
								<%= @attributes[2] %>
								<br>
								<%= f.range_field(:attribute2size, min: 1, max: 10, step: 1) %>
							</td>
							<td>
								<%= @attributes[3] %>
								<br>
								<%= f.range_field(:attribute3size, min: 1, max: 10, step: 1) %>
							</td>
						</tr>
						<tr>
							<td>
								<%= @attributes[4] %>
								<br>
								<%= f.range_field(:attribute4size, min: 1, max: 10, step: 1) %>
							</td>
							<td>
								<%= @attributes[5] %>
								<br>
								<%= f.range_field(:attribute5size, min: 1, max: 10, step: 1) %>
							</td>
							<td>
								<%= @attributes[6] %>
								<br>
								<%= f.range_field(:attribute6size, min: 1, max: 10, step: 1) %>
							</td>
						</tr>
						<tr>
							<td>
								<%= @attributes[7] %>
								<br>
								<%= f.range_field(:attribute7size, min: 1, max: 10, step: 1) %>
							</td>
							<td>
								<%= @attributes[8] %>
								<br>
								<%= f.range_field(:attribute8size, min: 1, max: 10, step: 1) %>
							</td>
							<td>
								<%= @attributes[9] %>
								<br>
								<%= f.range_field(:attribute9size, min: 1, max: 10, step: 1) %>
							</td>
						</tr>
					</table>
					<%= f.submit "Update" %> <%= link_to "Back To Landing", externals_path %>
				</div>
				<div class="white_section_box">
					<span style="font-size:<%=@external.attribute1size*10%>px;"><%= @attributes[1] %> </span>
					<span style="font-size:<%=@external.attribute2size*10%>px;"><%= @attributes[2] %> </span>
					<span style="font-size:<%=@external.attribute3size*10%>px;"><%= @attributes[3] %> </span>
					<br>               
					<span style="font-size:<%=@external.attribute4size*10%>px;"><%= @attributes[4] %> </span>
					<span style="font-size:<%=@external.attribute5size*10%>px;"><%= @attributes[5] %> </span>
					<span style="font-size:<%=@external.attribute6size*10%>px;"><%= @attributes[6] %> </span>
					<br>                      
					<span style="font-size:<%=@external.attribute7size*10%>px;"><%= @attributes[7] %> </span>
					<span style="font-size:<%=@external.attribute8size*10%>px;"><%= @attributes[8] %> </span>
					<span style="font-size:<%=@external.attribute9size*10%>px;"><%= @attributes[9] %> </span>
				</div>
				<div class="delete_button">
					Check this box to finalize these results then click update, this action cannont be undone
					<%= f.check_box(:finalized, checked_value: true, unchecked_value: false, class: "big_check_box") %>	
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<h1>Externals#edit</h1>
<p>Find me in app/views/externals/edit.html.erb</p>
